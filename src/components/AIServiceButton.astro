---
import claudeIcon from "../assets/images/claude-ai.svg";
import chatgptIcon from "../assets/images/chatgpt.svg";

export interface Props {
  service: "claude" | "chatgpt";
  url: string;
  label: string;
  t: (key: string) => string;
}

const { service, url, label, t } = Astro.props;
---

<a
  class="ai-service-button"
  href={url}
  target="_blank"
  rel="noopener noreferrer"
  aria-label={`${t("pageSidebar.aiHelp")} - ${label}`}
>
  <span class="ai-service-icon">
    {
      service === "claude" ? (
        <img src={claudeIcon.src} alt="Claude AI" width="16" height="16" />
      ) : (
        <img src={chatgptIcon.src} alt="ChatGPT" width="16" height="16" />
      )
    }
  </span>
  <span class="ai-service-label">{label} â†’</span>
</a>

<style>
  .ai-service-button {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0;
    font-size: var(--sl-text-xs);
    text-decoration: none;
    color: var(--sl-color-gray-3);
    border-radius: 0.25rem;
    transition: all 0.2s ease;
  }

  .ai-service-button:hover {
    color: var(--sl-color-white);
    background-color: var(--sl-color-accent-low);
  }

  .ai-service-icon {
    font-size: 1rem;
    flex-shrink: 0;
  }

  .ai-service-label {
    flex: 1;
    font-weight: 500;
  }
</style>
