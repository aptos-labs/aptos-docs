---
import { transformMarkdown } from 'starlight-openapi/libs/markdown'
import { capitalize } from 'starlight-openapi/libs/utils'

interface Props {
  text: string | undefined
}

const { text } = Astro.props

const code = text && text.length > 0 ? await transformMarkdown(capitalize(text)) : ''
---

{text && text.length > 0 && <div set:html={code} />}
