{
  "extends": "astro/tsconfigs/strictest",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["nextra-migration", "scripts", "node_modules", "dist", "public"],
  "compilerOptions": {
    "exactOptionalPropertyTypes": false,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "~~/*": ["*"],
      "@components/*": ["src/components/*"],
      "~config/*": ["src/config/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}
